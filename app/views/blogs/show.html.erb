<div id="title">
  <div>
    <p>
      Written by_<%= User.find_by(id: @blog.user_id).email %>
    </p>
    <p>
      <%= @blog.created_at.strftime("%Y/%m/%d") %>
    </p>
    <h1><%= @blog.title %></h1>
  </div>
</div>

<div id="article_wrap">
  <div id="content">
    <p><%= @blog.body %></p>
    <p>
    <% if user_signed_in? %>
    <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <% end %>
    <%= link_to 'Back', blogs_path %>
    </p>
  </div>

<%= render 'layouts/sidebar_ranking' %>

</div>
