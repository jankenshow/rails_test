<p id="notice"><%= notice %></p>

<div id="main">
<%= image_tag "main-img.jpg", alt: "main photo" %>
</div>

<h1>Blogs</h1>

<div id="article_wrap">
  <div id="article_list">
    <% @blogs.each do |blog| %>
      <h2><%= link_to blog.title, blog %></h2>
      <p><%= blog.created_at %></p>
      <p><% if current_user? %>
        <%= link_to 'Edit', edit_blog_path(blog) %>
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %></p>
    <% end %>
  </div>
    
  <div id="sidebar">
    <h2>★PV数ランキング</h2>
    <ul>
    </ul>
  </div>
  
</div>